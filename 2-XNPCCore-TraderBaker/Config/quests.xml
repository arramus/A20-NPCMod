<Config>

	<append xpath="/quests">
	
		<quest id="questCollectHoneyErrand">
      
			<property name="offer_key" value="Accept this errand to collect and return honey for a random farm reward." />
			<property name="name_key" value="Collect Honey Errand" />
			<property name="subtitle_key" value="Collect Honey Errand" />
			<property name="description_key" value="Collect 3 jars of honey and return to a Trader. The Baker will use them and you will receive a random farm reward." />
			<property name="icon" value="ui_game_symbol_quest" />
			<property name="repeatable" value="true" />
			<property name="category_key" value="quest" />
			<property name="difficulty" value="easy" />
			<property name="shareable" value="false"/>
			<objective type="Fetch" id="foodHoney" value="3" phase="1" />			
			<property name="completiontype" value="TurnIn" />			
		
		<objective type="ReturnToNPC">
			<property name="phase" value="2" />
			<property name="nav_object" value="return_to_trader" />
			<property name="use_closest" value="true" />			
		</objective>		

		<objective type="InteractWithNPC">
			<property name="phase" value="3" />
			<property name="nav_object" value="return_to_trader" />
			<property name="use_closest" value="true" />			
		</objective>

			<reward type="Exp" value="1500" />
			<reward type="Item" id="casinoCoin" value="250" />
			<reward type="LootItem" id="groupQuestBakerFarmPlotsT1" ischosen="true" value="2"/>
			<reward type="LootItem" id="groupQuestBakerFarmPlotsT2" ischosen="true" value="3"/>
			<reward type="LootItem" id="groupQuestBakerFarmPlotsT3" ischosen="true" value="4"/>			
		</quest>
		
		<quest id="questCollectEggsErrand">
      
			<property name="offer_key" value="Accept this errand to collect and return eggs for a random farm reward." />
			<property name="name_key" value="Collect Eggs Errand" />
			<property name="subtitle_key" value="Collect Eggs Errand" />
			<property name="description_key" value="Collect a Baker's Dozen eggs and return to a Trader. The Baker will use them and you will receive a random farm reward." />
			<property name="icon" value="ui_game_symbol_quest" />
			<property name="repeatable" value="true" />
			<property name="category_key" value="quest" />
			<property name="difficulty" value="easy" />
			<property name="shareable" value="false"/>
			<objective type="Fetch" id="foodEgg" value="13" phase="1" />			
			<property name="completiontype" value="TurnIn" />			
		
		<objective type="ReturnToNPC">
			<property name="phase" value="2" />
			<property name="nav_object" value="return_to_trader" />
			<property name="use_closest" value="true" />			
		</objective>		

		<objective type="InteractWithNPC">
			<property name="phase" value="3" />
			<property name="nav_object" value="return_to_trader" />
			<property name="use_closest" value="true" />			
		</objective>

			<reward type="Exp" value="1500" />
			<reward type="Item" id="casinoCoin" value="250" />
			<reward type="LootItem" id="groupQuestBakerFarmPlotsT1" ischosen="true" value="2"/>
			<reward type="LootItem" id="groupQuestBakerFarmPlotsT2" ischosen="true" value="3"/>
			<reward type="LootItem" id="groupQuestBakerFarmPlotsT3" ischosen="true" value="4"/>			
		</quest>		

	</append>
</Config>